<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:background="@drawable/border_radius_repetition">

    <LinearLayout
        android:id="@+id/repetition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/step_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextRepetition"
            android:textSize="25dp"/>

        <ImageButton
            android:id="@+id/step_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_circle_outline_grey_24dp"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:onClick="remove"/>

        <EditText
            android:id="@+id/step_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:inputType="number" />

        <ImageButton
            android:id="@+id/step_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_outline_grey_24dp"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:onClick="add"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repetition_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:layout_below="@+id/repetition_text"/>

</RelativeLayout>